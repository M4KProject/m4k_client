{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,

    /* Preact Config */
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "skipLibCheck": true,

    /* Strict Type Checking */
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    /* Additional Checks */
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,

    /* Ajout alias */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@common/*": ["./common/*"],
      "pocketbase-lite": ["./pocketbase-lite/src"],
      "pocketbase-lite/*": ["./pocketbase-lite/src/*"]
    }
  },
  "include": ["node_modules/vite/client.d", "vite.config", "common/**/*", "pocketbase-lite/**/*", "src/**/*"]
}
