{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,

		/* Preact Config */
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,

    	/* Ajout alias */
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@common/*": ["./common/*"]
		}
	},
	"include": [
		"node_modules/vite/client.d",
		"vite.config",
		"common/**/*",
		"src/**/*"
	]
}
